<%= form_for @category do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2>有<%= @category.errors.count %>个错误</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, class: 'form-control', placeholder: '名字' %>
  </div>
  <div class="actions">
    <%= f.submit "提交", class: 'btn btn-primary btn-large btn-block'%>
  </div>
<% end %>
