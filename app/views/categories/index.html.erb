<% provide(:title, "坊间｜种类") %>
<h1>种类</h1>
<div class="table-responsive">
  <div class="box-shadow">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>种类</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name, category %></td>
            <td><%= link_to '编辑', edit_category_path(category), class: 'btn btn-default btn-xs' %></td>
            <td><%= link_to '删除', category, method: :delete, data: { confirm: '你确定吗?' }, class: 'btn btn-default btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
