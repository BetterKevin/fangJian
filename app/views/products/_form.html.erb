<%= form_for @product do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>有<%= @product.errors.count %>个错误</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, class: 'form-control', placeholder: '名字' %>
    <%= f.text_field :price, class: 'form-control', placeholder: '价格' %>
    <%= f.select :category_id, Category.all.collect {|p| [ p.name, p.id ] }, { include_blank: "种类"}, class: "form-control input-sm" %>
  </div>
  <div class="actions">
    <%= f.submit "提交", class: 'btn btn-primary btn-large btn-block'%>
  </div>
<% end %>
