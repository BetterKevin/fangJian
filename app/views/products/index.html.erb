<% provide(:title, "坊间｜菜单") %>

<div class="table-responsive">
  <div class="box-shadow">
    <h1>菜单</h1>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>菜名</th>
          <th>价格(元)</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= link_to '编辑', edit_product_path(product), class: 'btn btn-default btn-xs' %></td>
            <td><%= link_to '删除', product, method: :delete, data: { confirm: '你确定吗?' }, class: 'btn btn-default btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class='paginate-container'>
      <%= will_paginate %>
    </div>
  </div>
</div>
